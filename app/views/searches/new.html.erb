<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <h1>Advanced search</h1>
    </div> 
  </div>
  <div class="row">
    <div class="col-md-6"> 
      <%= bootstrap_form_tag(url: searches_path, method: :get) do |f| %>
        <%= f.text_field :make, placeholder: "Make" %>
        <%= f.text_field :model, placeholder: "Model" %>
        <%= f.text_field :color, placeholder: "Color" %>
    </div>
    <div class="col-md-6">
    </div>
    <div class="col-md-3">        
        <%= f.select(:start_year, 1940..2017) %>
        <%= f.select(:end_year, 1940..2017) %>
        <%= submit_tag "search", class: "btn btn-primary", style: "padding: 5px 70px; font-size: 120%" %>
      <% end %>        
    </div>  
  </div>
</div>