
<div class="container">

  <div class="col-md-1">
    <h1>Advanced search</h1>
  </div> 

  <%= form_for @search, html: {class: "pure-form"} do |s| %>

    <div class="form-group">
      
      <div class="col-md-1">
        <label for="make" class="col-2 col-form-label">Make:</label>
            <%= s.text_field :make %>
      </div>
       
    
      <div class="col-md-1">
        <label for="model" class="col-2 col-form-label">Model:</label>
            <%= s.text_field :model%>
      </div>

      <div class="col-md-1">
        <label for="color" class="col-2 col-form-label">Color:</label>
            <%= s.text_field :color%>
      </div>

      <div class="col-md-1">
        <label for="year" class="col-2 col-form-label">Year:</label>
            <%= s.text_field :year %>
      </div>

      <div class="col-md-1">
            <%= s.submit "search", class: "pure-button pure-button-primary" %>
      </div>
  <%end%>
  </div>
    <div class="form-group">
      <div class="col-md-1">
         <div class="col-10">
      <a class="btn btn-primary" href="<%= root_path %>" role="button">Back</a> 
      </div> 
    </div> 

    </div>

</div>