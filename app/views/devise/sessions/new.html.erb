<div class="container" style="margin-top: 30px">
  <div class="col-md-6">
    <p style="font-size: 200%">Log In:</p>
  <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %> 
      <%= f.text_field :name, class: "form-control", placeholder: "Enter Name"  %>
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter Email" %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter Password" %>  
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
      <% end %>
      <input class="btn btn-primary" type="submit" value="Log In" style="padding: 6px 90px; font-size: 120%"><br><br>  
      <a class="btn btn-primary" href="<%= new_password_path(resource_name) %>" role="button" style="padding: 6px 30px; font-size: 120%">Forgot Your Password</a>
    </div>
  <% end %>
</div>  