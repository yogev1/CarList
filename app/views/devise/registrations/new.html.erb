<div class="container">
  
  <div class="form-group">
    <div class="col-10">
      <p style="font-size: 200%">Sign Up:</p>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    
  <div class="form-group">
    <label for="name" class="col-2 col-form-label">User Name:</label>
    <div class="col-10">
      <%= text_field_tag :name %>
    </div>
  </div>

  <div class="form-group">
    <label for="email" class="col-2 col-form-label">Email:</label>
    <div class="col-10">
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter Email" %>
    </div>  
  </div>
  
  <div class="form-group">
    <label for="password" class="col-2 col-form-label">Password:</label>
    <div class="col-10">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end -%><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter Password" %>  
    </div>
  </div>  
    
  <div class="form-group">
    <label for="email" class="col-2 col-form-label">Confirm Password:</label>
    <div class="col-10">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Enter Email" %>
    </div>  
  </div>

  <div class="form-group row">
    <div class="col-1">
        <input class="btn btn-primary" type="submit" value="Sign Up">
    </div>

    <div class="col-1">  
      <a class="btn btn-primary" href="<%= root_path %>" role="button">Back</a>
    </div>
  </div>
  <div class="form-group">
      <%= render "devise/shared/links" %>
  </div>
</div>  
<% end %>


