<div class="container" style="margin-top: 30px">
  <div class="col-md-6">
    <p style="font-size: 200%">Sign Up:</p>
    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= f.text_field :name, class: "form-control", placeholder: "Enter Name"  %>
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter Email" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end -%><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter Password" %>  
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Enter Email" %>
    <input class="btn btn-primary" type="submit" value="Sign Up" style="padding: 6px 50px; font-size: 120%"> 
  </div>
</div>  
<% end %>


