<div class="container">

  <div class="form-group">
    <div class="col-10">      
      <h1>Listing Cars</h1>
    </div>
  </div>    

  <% if current_user %>
    <div class="form-group">
      <div class="col-10">
        <a class="btn btn-primary" href="<%= new_car_path %>" role="button">Add New Car</a>
      </div>
    </div>

  <% else %>
    
    <div class="form-group">
      <div class="col-10"> 
        <h4 style="color: red">Please sign in before trying to add\edit cars!</h4>
      </div>
    </div>

  <% end %>  

  <div class="form-group">
    <div class="row">
      <% @cars.each do |car| %>
        <div class="col-md-4">
          <a class="thumbnail" href=" <%= car_path(car) %>"><img class="img-responsive"><%= image_tag car.image.url(:medium), height: "80%", width: "80%" %></a>
        </div>
      <% end %>
    </div></br>
  </div>
  
</div> 
