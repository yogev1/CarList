<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h1>Listing Cars</h1>
    </div>  
  </div>
</div>  

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <table>
        <thead>
          <tr>
            <th class="col-md-4">Make</th>
            <th class="col-md-4">Model</th>
            <th class="col-md-4">Color</th>
            <th class="col-md-4">Year</th>
          </tr>
        </thead>
    </div>
  </div>
</div>  

<div class="container">
  <div class="row">
      <tbody>
        <% @cars.each do |car| %>
          <tr>
            <td class="col-md-4"><%= car.make %></td>
            <td class="col-md-4"><%= car.model %></td>
            <td class="col-md-4"><%= car.color %></td>
            <td class="col-md-4"><%= car.year %></td>
            <td class="col-md-3"><%= link_to 'Show', car %></td>
            <td class="col-md-3"><%= link_to 'Edit', edit_car_path(car) %></td>
            <td class="col-md-3"><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>  
<br>

<div class="container">
  <div class="row">
    <p class="col-md-2"><%= link_to 'New Car', new_car_path %></p>
  </div>
</div> 
