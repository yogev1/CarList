<div class="container">
  <div class="form-group row">
    <div class="col-md-1">
      <p>
        <strong>Make:</strong>
        <%= @car.make %>
      </p>
    </div>

    <div class="col-md-1">
      <p>
        <strong>Model:</strong>
        <%= @car.model %>
      </p>
    </div>      
  
    <div class="col-md-1">
      <p>
        <strong>Color:</strong>
        <%= @car.color_type %>
      </p>
    </div>   

    <div class="col-md-1">
      <p>
        <strong>Year:</strong>
        <%= @car.year %>
      </p>
    </div>
  </div>   

  <% if current_user && @car.user_id == current_user.id %>

    <div class="form-group row">
      <div class="col-md-1">
        <a class="btn btn-primary" href="<%= edit_car_path(@car) %>" role="button">Edit</a>
      </div><br/>

      <div class="col-md-1">
        <a class="btn btn-primary" href="<%= root_path %>" role="button">Back</a>
      </div>  
    </div> 

  <% else %>
    
    <% if current_user %>
      <h4 style="color: red">You can only edit and delete cars you created!</h4>
      
      <div class="form-group row">  
        <div class="col-md-1">
         <a class="btn btn-primary" href="<%= root_path %>" role="button">Back</a>
        </div>
      </div>

    <% else %>
      <h4 style="color: red">Please sign in before trying to add\edit cars!</h4>
    <% end %>

  <% end %>
  
</div> 