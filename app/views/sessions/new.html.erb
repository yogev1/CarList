<%= form_tag sessions_path do %>

    <div class="container">
      <p style="font-size: 200%">Log in:</p>

        <div class="form-group">
          <div class="col-10">
            <div class="field">
              <label>Username:</label>
              <%= text_field_tag :name %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="col-10">
            <div class="field">
              <label>Email:</label>
              <%= text_field_tag :email %>
            </div>
          </div>  
        </div>

        <div class="form-group">
          <div class="col-10">
            <div class="field">
              <label>Password:</label>
              <%= password_field_tag :password %>
            </div>
          </div>  
        </div>
        
        <div class="form-group">
          <div class="col-10">
            <div class="actions">
              <%= submit_tag "Log in" %>
              <%= submit_tag "Cancel" %>
            </div>
          </div> 
        </div>

<% end %>

